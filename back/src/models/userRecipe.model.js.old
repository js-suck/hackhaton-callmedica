const sequelize = require("../db/sequelize");
const { DataTypes } = require("sequelize");

const UserRecipe = sequelize.define(
    "UserRecipe",
    {
        userId: {
            type: DataTypes.INTEGER,
            primaryKey: true,
        },
        recipeId: {
            type: DataTypes.INTEGER,
            primaryKey: true,
        },
    },
    {
        freezeTableName: true,
    }
);

UserRecipe.sync({ force: false })
    .then(() => {
        console.log(
            "'UserRecipe' model has been synchronized with the database."
        );
    })
    .catch((error) => {
        console.error(
            "Unable to synchronize 'UserRecipe' model with the database:",
            error
        );
    });

module.exports = UserRecipe;
